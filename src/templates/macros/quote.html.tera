{% macro quote(quote, hash) %}
<div class="d-flex flex-column min-vh-95 justify-content-center align-items-center px-2">
    <h1>Le saviez-vous ?</h1>
    <p class="text-center">{{ quote }}</p>

    <div class="d-flex flex-row">
        <a class="btn btn-primary mx-1" onclick="reload();">
            <i class="fa-solid fa-arrows-rotate"></i>
            <span>Une autre !</span>
        </a>
        <a class="btn btn-success mx-1" onclick='copy_hash_to_clipboard("{{hash}}");'>
            <i class="fa-solid fa-floppy-disk"></i>
            <span>Sauvegarder</span>
        </a>
    </div>

    <div class="d-flex flex-row invisible py-2" id="copypaste-confirm">
        <p class="text-muted">Copi√© dans le presse-papier !</p>
    </div>
</div>
{% endmacro quote %}
